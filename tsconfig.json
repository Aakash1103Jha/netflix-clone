{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"rootDir": "server",
		"moduleResolution": "node",
		"outDir": "server/build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "server/build/@types"
	},
	"include": ["server"],
	"exclude": ["node_modules, client"]
}
